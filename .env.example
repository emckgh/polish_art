# Example environment variables
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/polish_art_db

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Scraping
SCRAPER_USER_AGENT=PolishArtEngine/1.0
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_RATE_LIMIT_PER_MINUTE=60

# Image Processing
MAX_IMAGE_SIZE_MB=10
IMAGE_CACHE_DIR=./data/cache

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External APIs (add your keys)
GOOGLE_CUSTOM_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=
TINEYE_API_KEY=

# Sentry (optional)
SENTRY_DSN=
